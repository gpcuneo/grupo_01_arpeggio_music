<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/productDetail.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <article class="container">
                <nav class="container-article">
                    <div class="name-product">
                        <h4>
                            <%= product.name %>
                        </h4>
                    </div>
                    <div class="container-img-product-colum">
                            <% let selectedImg=product.image[0]; %>
                            <% product.image.forEach (img=>{ %>
                                <% if (img !==selectedImg){ %>
                                    <img src="<%= img %>" alt="">
                                <% } %>
                            <% }) %>
                    </div>
                    <div class="container-img">
                        <img src="<%= selectedImg %>" alt="">
                    </div>
                    <section class="box-text-product">
                        <h4>
                            <%= product.name %>
                        </h4>
                        <p class="price">$<%= product.price %>
                        </p>
                        <p class="discount"  
                        <% if (product.discount == 0) { %>
                            style= "display:none"
                        <% } %>
                        ><%= product.discount %> % de descuento</p>
                        <div class="box-characteristics">
                            <h5>Características</h5>
                            <p>
                                <%= product.characteristics %>
                            </p>
                        </div>
                        <div class="box-send">
                            <h5>Envíos</h5>
                            <P>Envios a todo el País<i class="fa-solid fa-truck"></i></P>
                        </div>
                        <div class="container-color">
                            <h5>Seleccione un color</h5>
                            <label for="">Color:</label>
                            <select name="color" id="">
                                <% product.colors.forEach(color =>{ %>
                                    <option value="<%= color %>"><%= color %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="box-stock">
                            <h5>Stock disponible</h5>
                            <div class="container-inc-dec">
                                <label for="cantidad">Cantidad:</label>
                                <button id="decrement"> - </button>
                                <p>
                                    <%= product.stock %>
                                </p>
                                <button id="increment"> + </button>
                            </div>
                        </div>
                        <div class="container-button">
                            <button id="input-shop">Comprar</button>
                            <button id="input-cart-shop">Agregar al carrito</button>
                        </div>
                    </section>
                </nav>
                <div class="container-descripcion">
                    <div class="caja-descripcion">
                        <h5>Descripción del Producto</h5>
                        <p class="texto">
                            <%= product.description %>
                        </p>
                    </div>
                    <div class="container-store">
                        <h5>Información de Tienda</h5>
                        <p class="texto">
                            <%= product.store %>
                        </p>
                    </div>
                </div>
                <nav class="container-other-product">
                    <h5 class="name-other">Productos Similares</h5>
                    <div class="box-article">
                        <% let indice = articles.findIndex(({id}) => id == product.id) %>
                        <% let newArr = articles.splice(indice,1) %>
                        <% articles.forEach(article=>{ %>
                            <article class="article-other">
                                <a href="/products/<%= article.id %>/detail">
                                    <img src="<%= article.image[0] %>" alt="">
                                    <div class="box-article-charact">
                                        <h5><%= article.name %></h5>
                                        <p><%= article.characteristics %></p>
                                        <p class="price-art">$<%= article.price %>
                                        </p>
                                    </div>
                                </a>
                            </article>
                        <% }) %>
                    </div>
                </nav>
            </article>
        </main>
        <%- include('../partials/footer') %>
</body>

</html>